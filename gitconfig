  templatedir = ~/.gitconfs/template_symlinks
[merge]
  defaultToUpstream = true
  tool = vimdiff
[diff]
  tool = vimdiff
  algorithm = patience
[core]
  autocrlf = input
  excludesfile = /Users/robustus/.gitignore_global
[mergetool "mvimdiff"]
  cmd = "mvimdiff -f $BASE $LOCAL $REMOTE $MERGED"
  trustExitCode = true
[difftool "mvimdiff"]
  cmd = mvim -f -d \"$LOCAL\" \"$REMOTE\"
[status]
  branch = 1
  short = 1
